<p style="color: green"><%= notice %></p>

<%= render @chapter %>

<nav class="chapter-navigation">
  <% if @previous_chapter %>
    <%= link_to "← Previous", @previous_chapter %>
  <% end %>

  <% if @next_chapter %>
    <%= link_to "Next →", @next_chapter %>
  <% end %>
</nav>

<div>
  <%= link_to "Back To Chapters", @chapter.novel %>
</div>

<div>
  <%= simple_format(@chapter.content) %>
</div>

<div>
  <%= link_to "Back To Chapters", @chapter.novel %>
</div>

<% if current_user&.admin? %>
  <%= link_to "Edit This Chapter", edit_chapter_path(@chapter) %> 
  <br>
  <%= button_to "Delete", @chapter, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
<% end %>