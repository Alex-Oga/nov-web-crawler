<style>
:root {
  --bg: #0f1115;
  --panel: #151922;
  --text: #e6e6e6;
  --muted: #9aa0a6;
  --accent: #7aa2ff;
  --border: #24293a;
  --highlight: #1f2537;
  --radius: 12px;
  --line-height: 1.8;
  --font-size: 18px;
}

* { box-sizing: border-box; margin: 0; padding: 0; }

body {
  background: var(--bg);
  color: var(--text);
  font-family: Georgia, "Times New Roman", serif;
  line-height: var(--line-height);
  font-size: var(--font-size);
}

header { background: var(--panel); padding: 1rem 2rem; border-bottom: 1px solid var(--border); }
.logo { font-size: 1.5rem; font-weight: bold; }
.logo a { color: inherit; text-decoration: none; }

/* CONTROLS */
.controls { display: flex; gap: 0.5rem; }
.controls button {
  background: var(--highlight);
  border: 1px solid var(--border);
  color: var(--text);
  padding: 0.4rem 0.8rem;
  border-radius: var(--radius);
  cursor: pointer;
}
.controls button:hover { background: var(--accent); color: #000; }

/* LAYOUT */
main { max-width: 900px; margin: auto; padding: 2rem 1.5rem 4rem; }
.chapter-title { font-size: 2rem; margin-bottom: 1rem; text-align: center; }
.chapter-meta { color: var(--muted); text-align: center; margin-bottom: 1rem; }

/* CONTENT */
.chapter-text { background: transparent; margin-top: 0.8rem; }
.chapter-text p { margin-bottom: 1.4rem; }

/* NAV */
.nav { display: flex; justify-content: space-between; margin-top: 3rem; gap: 1rem; }
.nav a { text-decoration: none; color: var(--accent); font-weight: bold; }
.nav a:hover { text-decoration: underline; }

/* FOOTER */
footer {
  background: var(--panel);
  border-top: 1px solid var(--border);
  text-align: center;
  padding: 1rem;
  color: var(--muted);
  margin-top: 2rem;
}

/* RESPONSIVE */
@media (max-width: 600px) {
  :root { --font-size: 16px; }
  .chapter-title { font-size: 1.6rem; }
  .nav { flex-direction: column; gap: 0.5rem; }
}
</style>

<main>
  <% if notice.present? %>
    <p style="color:#bff0b3; margin-bottom:12px;"><%= notice %></p>
  <% end %>

  <h1 class="chapter-title">
    <%= @chapter.name %>
  </h1>

  <div class="chapter-meta">
    <%= @chapter.novel&.name ? "#{@chapter.novel.name}" : "" %>
    <% if @chapter.created_at %> • <%= @chapter.created_at.strftime("%b %d, %Y") %><% end %>
  </div>

  <div id="content" class="chapter-text">
    <div class="controls" role="toolbar" aria-label="Font size">
      <button type="button" onclick="changeFont(-1)" aria-label="Decrease font">A-</button>
      <button type="button" onclick="changeFont(1)" aria-label="Increase font">A+</button>
    </div>
    <%= simple_format(@chapter.content || t("chapters.no_content", default: "No content available.")) %>
  </div>

  <div class="nav" role="navigation" aria-label="Chapter navigation">
    <div>
      <% if @previous_chapter %>
        <%= link_to "← Previous Chapter", @previous_chapter %>
      <% end %>
    </div>

    <div style="text-align:center;">
      <%= link_to "Back To Chapters", @chapter.novel %>
    </div>

    <div style="text-align:right;">
      <% if @next_chapter %>
        <%= link_to "Next Chapter →", @next_chapter %>
      <% end %>
    </div>
  </div>

  <% if current_user&.admin? %>
    <div style="margin-top:12px;">
      <%= link_to "Edit This Chapter", edit_chapter_path(@chapter), style: "color:var(--accent); text-decoration:none; margin-right:12px;" %>
      <%= button_to "Delete Chapter", @chapter, method: :delete, data: { turbo_confirm: "Are you sure?" }, form: { style: "display:inline" }, style: "background:#7a1e1e; color:#fff; border:none; padding:6px 10px; border-radius:6px;" %>
    </div>
  <% end %>
</main>

<footer>
  © 2026 NightRead • A Place to Read in the Dark
</footer>

<script>
let currentSize = parseInt(getComputedStyle(document.documentElement).getPropertyValue('--font-size')) || 18;

function changeFont(amount) {
  currentSize = Number(currentSize) + amount;
  if (currentSize < 14) currentSize = 14;
  if (currentSize > 26) currentSize = 26;
  document.documentElement.style.setProperty('--font-size', currentSize + 'px');
  document.body.style.fontSize = currentSize + 'px';
}
</script>