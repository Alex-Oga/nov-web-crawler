<p style="color: green"><%= notice %></p>
<%= render @website %>


<div>
  <%= link_to "New Novel", new_website_novel_path(@website) if current_user&.admin? %>
</div>
<br>

<% @novels.each do |novel| %>
    <div>
    <%= link_to novel.name, novel %>
    </div>
<% end %>
<br>

<%= link_to "Back To Websites", websites_path %>
<br>
<% if current_user&.admin? %>
<%= link_to "Edit This Website", edit_website_path(@website) %>
<br>
<%= button_to "Delete", @website, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
<% end %>